<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<body class="bg-light">  

<div class="container my-5">
  <a href="/" class="d-flex align-items-center text-decoration-none">
    <svg width="25" height="25" viewBox="0 0 16 16" class="bi bi-arrow-left-circle text-dark" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
      <path fill-rule="evenodd" d="M8.354 11.354a.5.5 0 0 0 0-.708L5.707 8l2.647-2.646a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708 0z"/>
      <path fill-rule="evenodd" d="M11.5 8a.5.5 0 0 0-.5-.5H6a.5.5 0 0 0 0 1h5a.5.5 0 0 0 .5-.5z"/>
    </svg>
    <span class="text-dark font-weight-light ml-2">Return</span>
  </a>

  
  <%if (books.length > 0) { %>
    <h2 class="my-4 text-dark font-weight-light"><% books.length %> Results</h2>
    <div class="row">
      <% books.forEach((book) => { %>
        <div class="col-lg-3 col-md-4 my-3">
          <div class="p-3 bg-white rounded d-flex align-items-start">
            <img src="<%= book._source.formats['image/jpeg'] %>" alt="<%= book._source.title %>" height="100">
            <div class="d-flex flex-column justify-content-between ml-3">
              <span class="font-weight-normal text-dark" style="font-size: 14px;"><%= book._source.title %></span>
              <span class="font-weight-light text-muted mt-1" style="font-size: 13px;"><%= book._source.authors[0].name %></span>
              <div class="font-weight-light text-dark mt-1" style="font-size: 11px;">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cloud-download-fill mr-2 text-dark" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M8 0a5.53 5.53 0 0 0-3.594 1.342c-.766.66-1.321 1.52-1.464 2.383C1.266 4.095 0 5.555 0 7.318 0 9.366 1.708 11 3.781 11H7.5V5.5a.5.5 0 0 1 1 0V11h4.188C14.502 11 16 9.57 16 7.773c0-1.636-1.242-2.969-2.834-3.194C12.923 1.999 10.69 0 8 0zm-.354 15.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 14.293V11h-1v3.293l-2.146-2.147a.5.5 0 0 0-.708.708l3 3z"/>
                </svg>
                <%= book._source.download_count %>
              </div>
            </div>
          </div>
        </div>
      <% })%>
    </div>
    <% } else { %>
      <h2 class="my-4 text-dark font-weight-light">0 Result</h2>
      <div class="row">
        <span class="col font-weight-light text-dark">No books have been found, please try again.</span>
      </div>
    <% } %>
</div>
</body>
