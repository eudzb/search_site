<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<body class="bg-light">  

<div class="container my-5">
  <a href="/" class="d-flex align-items-center text-decoration-none">
    <svg width="25" height="25" viewBox="0 0 16 16" class="bi bi-arrow-left-circle text-dark" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
      <path fill-rule="evenodd" d="M8.354 11.354a.5.5 0 0 0 0-.708L5.707 8l2.647-2.646a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708 0z"/>
      <path fill-rule="evenodd" d="M11.5 8a.5.5 0 0 0-.5-.5H6a.5.5 0 0 0 0 1h5a.5.5 0 0 0 .5-.5z"/>
    </svg>
    <span class="text-dark font-weight-light ml-2">Return</span>
  </a>

  <h2 class="my-4 text-dark font-weight-light">Results</h2>

  <div class="row">
    <% books.forEach((book) => { %>
      <div class="col-3 my-3">
        <div class="p-3 bg-white rounded d-flex align-items-start">
          <img src="<%= book._source.formats['image/jpeg'] %>" alt="<%= book._source.title %>" height="100">
          <div class="d-flex flex-column justify-content-between ml-3">
            <span class="font-weight-normal"><%= book._source.title %></span>
            <span class="font-weight-light mt-1"><%= book._source.authors[0].name %></span>
          </div>
        </div>
      </div>
    <% })%>
  </div>
</div>
</body>
